<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %>
    
    <!-- Message -->
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
      </ul>
    <% } %>
    
    <form action="/account/register" method="post">
        <label>First name<input type="text" name="account_firstname" title="Enter your first name" autocomplete="given-name" value="<%= locals.account_firstname %>" required></label>
        <label>Last name<input type="text" name="account_lastname" title="Enter your last name" autocomplete="family-name" value="<%= locals.account_lastname %>" required></label>
        <label>Email address<input type="email" name="account_email" title="Enter your email address" placeholder="johndoe@email.com" autocomplete="email" value="<%= locals.account_email %>" required></label>
        <label>Password<input type="password" name="account_password" title="Password must be at least 12 characters long and contain at least 1 capital letter, 1 number, and 1 special character." pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></label>
        <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        <button type="submit" title="Register" aria-label="register">Register</button>
    </form>
    