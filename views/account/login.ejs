<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Message -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form id="login-form" action="/account/login" method="post">
    <label id="account-email">Email<input type="email" name="account_email" title="Enter your email" placeholder="johndoe@email.com" autocomplete="email" value="<%= locals.account_email %>" required></label>
    <label id="account-password">Password<input type="password" name="account_password" title="Password must be at least 12 characters long and contain at least 1 capital letter, 1 number, and 1 special character." pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></label>
    <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
    <button type="submit" title="login" aria-label="login">Login</button>
    <p>No account? <a href="/account/register">Sign-up</a></p>
</form>

